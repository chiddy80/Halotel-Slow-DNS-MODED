Description=Client SlowDNS By esimfreegb
Documentation=t.me/esimfreegb
After=network.target nss-lookup.target
[Service]
Type=simple
User=root
CapabilityBoundingSet=CAP_NET_ADMIN CAP_NET_BIND_SERVICE
AmbientCapabilities=CAP_NET_ADMIN CAP_NET_BIND_SERVICE
NoNewPrivileges=true
ExecStart=/etc/slowdns/sldns-client -udp 8.8.8.8:53 --pubkey-file /etc/slowdns/server.pub ntt.vpschiddy.icu 127.0.0.1:110
Restart=on-failure
[Install]
WantedBy=multi-user.target
